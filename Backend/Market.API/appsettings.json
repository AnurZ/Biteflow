{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": { "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true,
          "outputTemplate": "[{Application}][{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithProcessId", "WithMachineName" ]
  },
  "ConnectionStrings": {
    "Main": "Server=localhost;Database=Biteflow;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "Market.Api",
    "Audience": "Market.Spa",
    "Key": "DEV_ONLY_CHANGE_ME_TO_LONG_RANDOM_SECRET",
    "AccessTokenMinutes": 20,
    "RefreshTokenDays": 14
  },
  "IdentityServer": {
    "Authority": "https://localhost:7260/"
  },
  "ActivationLink": {
    "BaseUrl": "http://localhost:4200/",
    "Route": "/activate",
    "Lifetime": "1.00:00:00",
    "TokenSecret": "CHANGE_ME_IN_SECRET_STORE"
  },
  "Email": {
    "Enabled": false,
    "Host": "smtp.your-provider.com",
    "Port": 587,
    "EnableSsl": true,
    "FromAddress": "no-reply@biteflow.com",
    "FromName": "Biteflow",
    "Username": "smtp-username",
    "Password": "smtp-password"
  },
  "Captcha": {
    "VerifyEndpoint": "https://hcaptcha.com/siteverify",
    "Enabled": true
  },
  "SeedAdmin": {
    "Email": "admin@test.com",
    "Password": "@Test123!",
    "DisplayName": "System Owner"
  }
}
