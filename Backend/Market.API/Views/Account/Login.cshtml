@model LoginInputModel
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f7;
            margin: 0;
            padding: 0;
        }
        .shell {
            max-width: 420px;
            margin: 48px auto;
            padding: 32px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
        }
        h1 {
            margin: 0 0 12px;
            font-size: 24px;
            color: #111827;
        }
        p.sub {
            margin: 0 0 24px;
            color: #4b5563;
        }
        label {
            display: block;
            font-weight: 600;
            margin: 12px 0 6px;
            color: #111827;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 14px;
            box-sizing: border-box;
        }
        .error {
            background: #fef2f2;
            color: #b91c1c;
            border: 1px solid #fecdd3;
            padding: 10px 12px;
            border-radius: 8px;
            margin-bottom: 12px;
            font-size: 14px;
        }
        .actions {
            margin-top: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        button {
            padding: 12px 18px;
            background: #111827;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-weight: 700;
            cursor: pointer;
        }
        button:hover {
            background: #0b1222;
        }
        .remember {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            color: #111827;
        }
    </style>
</head>
<body>
    <div class="shell">
        <h1>Sign in</h1>
        <p class="sub">Use your Biteflow account to continue.</p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error">
                @foreach (var entry in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@entry.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" />

            <label asp-for="Email"></label>
            <input asp-for="Email" type="text" autocomplete="username" required />

            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" autocomplete="current-password" required />

            <div class="actions">
                <button type="submit">Continue</button>
                <label class="remember">
                    <input asp-for="RememberLogin" type="checkbox" />
                    <span>Remember me</span>
                </label>
            </div>
        </form>
    </div>
</body>
</html>
